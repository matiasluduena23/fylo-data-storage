---
const { iconSrc } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="icon flex">
    <Image src={iconSrc} alt="logo icon" />
</div>

<style>
    .icon {
        background-color: var(--very-dark-blue);
        width: 50px;
        height: 50px;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
    }
</style>
